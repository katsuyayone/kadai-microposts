<% if favposts.any? %>
  <ul class="list-unstyled">
    <% favposts.each do |favpost| %>
    <% unless user == favpost.user %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(favpost.user, { size: 90 }) %>" alt="">
        <div class="media-body">
          <div>
            <%= favpost.user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(favpost.user) %></p>
            <p><%= favpost.content %></p>
          </div>
        </div>
      </li>
    <% end %>
    <% end %>
  </ul>
<% end %>